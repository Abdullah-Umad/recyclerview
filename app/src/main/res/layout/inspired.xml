<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="8dp">

            <ImageView
                android:id="@+id/rv2img"
                android:layout_width="96dp"
                android:layout_height="87dp"
                android:background="@drawable/orange"
                android:padding="4dp" />

            <TextView
                android:id="@+id/rv2txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@id/rv2img"
                android:text="7 Nutrition Tips to Lose"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/rv2txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rv2txt1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/rv2img"
                android:text="Weight Faster"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/rv2txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rv2txt2"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="18dp"
                android:layout_toRightOf="@id/rv2img"
                android:paddingRight="15dp"
                android:text="Nutrition"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse" />

            <ImageView
                android:id="@+id/rv2img2"
                android:layout_width="59dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="134dp"
                android:layout_marginTop="65dp"

                android:layout_marginEnd="17dp"
                android:layout_marginBottom="12dp"
                android:layout_toEndOf="@+id/rv2txt3"
                app:srcCompat="@drawable/favorite" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>